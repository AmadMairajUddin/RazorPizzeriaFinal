@page
@model RazorPizzeria.Pages.PizzaModel
@{
}


@*    <a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">Custom Pizza</a>
    <a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Check Out</a>*@


    <div class="text-center">
        <div class="mainText">
            <h1 class="display-4 text-capitalize text-black">
               Our Great selection of pizzas!
            </h1>
            <h4>
                Choose one, or try our pizza builder, Then order and done!
            </h4>
            <h4>
                No need to wait for your pizza to be delivered, just pick it up!
            </h4>
            <h4>
            No need to give us your billing information if you have ordered before.
            </h4>
            <p class="smallText"><i>Only one pizza per order.</i></p>
        </div>
    </div>

    <div class="container align-content-center">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makYourText">
                            <h3 style="text-align:left;"> Create your own Pizza</h3>
                            <p style="text-align: left;">Make your own pizza with our pizza maker!</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="/Forms/CustomPizza">Try it!</a>
                        </div>
                    </div>
                </div>
            </div>
        @foreach (var pizza in Model.fakePizzaDB)
        { 
            var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png") ;
            <div class="col-4 mb5">

                <img src="@imagePath" class="w-100" asp-append-version="true" />
                    <a  class="btn btn-primary mt-1" asp-area="" asp-page="/Checkout/Checkout" 
                    asp-route-ImageTitle="@pizza.ImageTitle" 
                    asp-route-PizzaPrice="@pizza.FinalPrice">Get This Pizza Now!</a>
                    <br />
 
            </div>
        }
        </div>
    </div>